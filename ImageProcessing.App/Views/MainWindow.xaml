<Window x:Class="ImageProcessing.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:flowchart="clr-namespace:ImageProcessing.App.Views.Flowchart.Nodes"
        xmlns:vm="clr-namespace:ImageProcessing.App.ViewModels.Flowchart"
        xmlns:vmBase="clr-namespace:ImageProcessing.App.ViewModels"
        xmlns:utilities="clr-namespace:ImageProcessing.App.Utilities"
        Title="Flowchart App" Height="600" Width="600">

    <Window.Resources>
        <utilities:PositionConverter x:Key="PositionConverter"/>
        <utilities:ArrowPathConverter x:Key="ArrowPathConverter"/>
        <utilities:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
        <utilities:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- Control Bar Button Style -->
        <Style x:Key="ControlBarButton" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22000000"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Control Bar -->
        <ToolBarTray DockPanel.Dock="Top" Background="#EEE">
            <ToolBar>
                <!-- Play All -->
                <Button Command="{Binding PlayCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Execute entire flowchart">
                    <Image Source="/Icons/play.png" Width="16" Height="16"/>
                </Button>

                <!-- Play Next Node -->
                <Button Command="{Binding PlayNextCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Execute next node">
                    <Image Source="/Icons/play_next.png" Width="16" Height="16"/>
                </Button>

                <!-- Pause -->
                <Button Command="{Binding PauseCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Pause execution">
                    <Image Source="/Icons/pause.png" Width="16" Height="16"/>
                </Button>

                <!-- Stop -->
                <Button Command="{Binding StopCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Stop execution">
                    <Image Source="/Icons/stop.png" Width="16" Height="16"/>
                </Button>

                <!-- Reset -->
                <Button Command="{Binding ResetCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Reset Execution">
                    <Image Source="/Icons/reset.png" Width="16" Height="16"/>
                </Button>

                <!-- Delete -->
                <Button Command="{Binding DeleteNodeCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Delete Node">
                    <Image Source="/Icons/delete.png" Width="16" Height="16"/>
                </Button>

                <Separator/>

                <!-- Save Flowchart -->
                <Button Command="{Binding SaveFlowchartCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Save Flowchart">
                    <TextBlock Text="💾" FontSize="14"/>
                </Button>

                <!-- Load Flowchart -->
                <Button Command="{Binding LoadFlowchartCommand}"
                        Style="{StaticResource ControlBarButton}"
                        ToolTip="Load Flowchart">
                    <TextBlock Text="📂" FontSize="14"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200" MinHeight="100"/>
        </Grid.RowDefinitions>

        <!-- Main flowchart area -->
        <Grid Grid.Row="0">
        

        <!-- Draw connections FIRST (behind nodes) -->
        <ItemsControl ItemsSource="{Binding Connections}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:ConnectionViewModel}">
                    <Canvas>
                        <!-- Line -->
                        <Path Stroke="Black" StrokeThickness="2">
                            <Path.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                    Command="{Binding DataContext.ConnectionClickedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                            </Path.InputBindings>
                            <Path.Data>
                                <MultiBinding Converter="{StaticResource ArrowPathConverter}" ConverterParameter="Line">
                                    <Binding Path="Source"/>
                                    <Binding Path="Target"/>
                                </MultiBinding>
                            </Path.Data>
                        </Path>
                    
                        <!-- Arrowhead -->
                        <Path Fill="Black" Stroke="Black" StrokeThickness="1">
                            <Path.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                    Command="{Binding DataContext.ConnectionClickedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                            </Path.InputBindings>
                            <Path.Data>
                                <MultiBinding Converter="{StaticResource ArrowPathConverter}" ConverterParameter="Triangle">
                                    <Binding Path="Source"/>
                                    <Binding Path="Target"/>
                                </MultiBinding>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
        <ItemsControl ItemsSource="{Binding Nodes}">
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type vm:StartNodeViewModel}">
                    <Grid>
                        <Ellipse Width="10" Height="10" Stroke="Black" Fill="Transparent">
                            <Ellipse.Margin>
                                <MultiBinding Converter="{StaticResource PositionConverter}">
                                    <Binding Path="X"/>
                                    <Binding Path="Y"/>
                                    <Binding Path="Width"/>
                                    <Binding Path="Height"/>
                                </MultiBinding>
                            </Ellipse.Margin>
                        </Ellipse>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type vm:EndNodeViewModel}">
                    <Grid>
                        <Ellipse Width="10" Height="10" Stroke="Black" Fill="Transparent">
                            <Ellipse.Margin>
                                <MultiBinding Converter="{StaticResource PositionConverter}">
                                    <Binding Path="X"/>
                                    <Binding Path="Y"/>
                                    <Binding Path="Width"/>
                                    <Binding Path="Height"/>
                                </MultiBinding>
                            </Ellipse.Margin>
                        </Ellipse>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type vm:BinarizeNodeViewModel}">
                    <Grid>
                        <Border Opacity="{Binding DataContext.IsExecuting,
                    RelativeSource={RelativeSource AncestorType=Window},
                    Converter={StaticResource BooleanToOpacityConverter}}">
                            <flowchart:BinarizeNodeView>
                                <flowchart:BinarizeNodeView.Margin>
                                    <MultiBinding Converter="{StaticResource PositionConverter}">
                                        <Binding Path="X"/>
                                        <Binding Path="Y"/>
                                        <Binding Path="Width"/>
                                        <Binding Path="Height"/>
                                    </MultiBinding>
                                </flowchart:BinarizeNodeView.Margin>
                            </flowchart:BinarizeNodeView>
                        </Border>
                        <Grid.InputBindings>
                            <MouseBinding 
                            MouseAction="LeftClick"
                            Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </Grid.InputBindings>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type vm:LoadImageNodeViewModel}">
                    <Grid>
                        <Border Opacity="{Binding DataContext.IsExecuting,
                            RelativeSource={RelativeSource AncestorType=Window},
                            Converter={StaticResource BooleanToOpacityConverter}}">
                            <flowchart:LoadImageNodeView>
                                <flowchart:LoadImageNodeView.Margin>
                                    <MultiBinding Converter="{StaticResource PositionConverter}">
                                        <Binding Path="X"/>
                                        <Binding Path="Y"/>
                                        <Binding Path="Width"/>
                                        <Binding Path="Height"/>
                                    </MultiBinding>
                                </flowchart:LoadImageNodeView.Margin>
                            </flowchart:LoadImageNodeView>
                        </Border>
                        <Grid.InputBindings>
                        <MouseBinding 
                            MouseAction="LeftClick"
                            Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </Grid.InputBindings>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type vm:GrayscaleNodeViewModel}">
                    <Grid>
                        <Border Opacity="{Binding DataContext.IsExecuting,
                        RelativeSource={RelativeSource AncestorType=Window},
                        Converter={StaticResource BooleanToOpacityConverter}}">
                            <flowchart:GrayscaleNodeView>
                                <flowchart:GrayscaleNodeView.Margin>
                                    <MultiBinding Converter="{StaticResource PositionConverter}">
                                        <Binding Path="X"/>
                                        <Binding Path="Y"/>
                                        <Binding Path="Width"/>
                                        <Binding Path="Height"/>
                                    </MultiBinding>
                                </flowchart:GrayscaleNodeView.Margin>
                            </flowchart:GrayscaleNodeView>
                        </Border>
                        <Grid.InputBindings>
                            <MouseBinding 
                                MouseAction="LeftClick"
                                Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                        </Grid.InputBindings>
                    </Grid>
                </DataTemplate>

                    <DataTemplate DataType="{x:Type vm:ResizeNodeViewModel}">
                        <Grid>
                            <Border Opacity="{Binding DataContext.IsExecuting,
                            RelativeSource={RelativeSource AncestorType=Window},
                            Converter={StaticResource BooleanToOpacityConverter}}">
                                <flowchart:ResizeNodeView>
                                    <flowchart:ResizeNodeView.Margin>
                                        <MultiBinding Converter="{StaticResource PositionConverter}">
                                            <Binding Path="X"/>
                                            <Binding Path="Y"/>
                                            <Binding Path="Width"/>
                                            <Binding Path="Height"/>
                                        </MultiBinding>
                                    </flowchart:ResizeNodeView.Margin>
                                </flowchart:ResizeNodeView>
                            </Border>
                            <Grid.InputBindings>
                            <MouseBinding 
                                MouseAction="LeftClick"
                                Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                            </Grid.InputBindings>
                        </Grid>
                    </DataTemplate>

                </ItemsControl.Resources>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>

    <!-- GridSplitter -->
    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#CCC"/>

    <!-- Bottom pane for node inputs -->
    <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#CCC" BorderThickness="0,1,0,0">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ContentControl Content="{Binding SelectedNode}">
                    <ContentControl.Resources>
                        <!-- Template for Binarize Node -->
                        <DataTemplate DataType="{x:Type vm:BinarizeNodeViewModel}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                
                                <!-- Input Image -->
                                <TextBlock Text="Image:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding InImgOptions}"
                                    DisplayMemberPath="Key"
                                    SelectedValuePath="Key"
                                    SelectedValue="{Binding SelectedInImgLabel}"
                                    DropDownOpened="ImageComboBox_DropDownOpened"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Thresholding mode -->
                                <TextBlock Text="Thresholding Mode:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding ThresholdingTypeOptions}"
                                    SelectedItem="{Binding SelectedThresholdingType}"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Threshold range start -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Start: " VerticalAlignment="Center" Width="80"/>
                                    <TextBox Text="{Binding RangeStart, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                                </StackPanel>

                                <!-- Threshold range end -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="End: " VerticalAlignment="Center" Width="80"/>
                                    <TextBox Text="{Binding RangeEnd, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>

                        <!-- Template for Grayscale Node -->
                        <DataTemplate DataType="{x:Type vm:GrayscaleNodeViewModel}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                
                                <!-- Input Image -->
                                <TextBlock Text="Image:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding InImgOptions}"
                                    DisplayMemberPath="Key"
                                    SelectedValuePath="Key"
                                    SelectedValue="{Binding SelectedInImgLabel}"
                                    DropDownOpened="ImageComboBox_DropDownOpened"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>
                            </StackPanel>
                        </DataTemplate>

                        <!-- Template for Resize Node -->
                        <DataTemplate DataType="{x:Type vm:ResizeNodeViewModel}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                
                                <!-- Input Image -->
                                <TextBlock Text="Image:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding InImgOptions}"
                                    DisplayMemberPath="Key"
                                    SelectedValuePath="Key"
                                    SelectedValue="{Binding SelectedInImgLabel}"
                                    DropDownOpened="ImageComboBox_DropDownOpened"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Interpolation mode -->
                                <TextBlock Text="Interpolation Mode:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding InterpolationModeOptions}"
                                    SelectedItem="{Binding SelectedInterpolationMode}"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>

                                <!-- Scale -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Scale: " VerticalAlignment="Center" Width="80"/>
                                    <TextBox Text="{Binding Scale, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>

                        <!-- Template for LoadImage Node -->
                        <DataTemplate DataType="{x:Type vm:LoadImageNodeViewModel}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                
                                <!-- Browse button -->
                                <Button Content="Browse for Image" 
                                    Command="{Binding BrowseCommand}"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"/>
                            </StackPanel>
                        </DataTemplate>

                        <!-- Default template for other nodes -->
                        <DataTemplate DataType="{x:Type vmBase:FlowchartNodeViewModel}">
                            <StackPanel Margin="10">
                                <TextBlock Text="No inputs available for this node" FontStyle="Italic" Foreground="#999"/>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </ScrollViewer>
        </Grid>
    </Border>

    </Grid>

    </DockPanel>

</Window>