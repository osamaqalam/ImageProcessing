<UserControl x:Class="ImageProcessing.App.Views.Flowchart.Nodes.BinarizeNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessing.App.Views.Flowchart.Nodes"
             xmlns:utilities="clr-namespace:ImageProcessing.App.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">

    <UserControl.Resources>
        <utilities:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <Border Width="{Binding Width}" 
        Height="{Binding Height}"
        Background="{Binding IsSelected, Converter={StaticResource BooleanToBrushConverter}}"
        CornerRadius="4" 
        Padding="8">
        <StackPanel>
            <TextBlock Text="{Binding Label}" 
            Foreground="White" 
            FontWeight="Bold"
            Margin="0,0,0,8"
            TextAlignment="Center"/>
            
            <!-- Input Image -->
            <TextBlock Text="Image:" 
            Foreground="White" 
            FontWeight="Bold"
            Margin="0,0,0,8"
            TextAlignment="Left"/>
            <ComboBox ItemsSource="{Binding InImgOptions}"
            DisplayMemberPath="Key"
            SelectedValuePath="Key"
            SelectedValue="{Binding SelectedInImgLabel}"
            DropDownOpened="ComboBox_DropDownOpened"
            IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
            </ComboBox>

            <!-- Thresholding mode Image -->
            <TextBlock Text="Thresholding Mode:" 
            Foreground="White" 
            FontWeight="Bold"
            Margin="0,0,0,8"
            TextAlignment="Left"/>
            <ComboBox ItemsSource="{Binding ThresholdingTypeOptions}"
            SelectedItem="{Binding SelectedThresholdingType}"
            IsEnabled="{Binding DataContext.IsExecuting, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}">
            </ComboBox>

            <!-- Threshold range start -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Start: " 
                Foreground="White" 
                Margin="2,2,0,0"
                VerticalAlignment="Center"/>
                        <TextBox TextWrapping="Wrap" 
                Text="{Binding RangeStart, UpdateSourceTrigger=PropertyChanged}"
                DataObject.Pasting="TextBox_Pasting" 
                Width="120"
                VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Threshold range end -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="End:  " 
                Foreground="White" 
                Margin="2,2,0,0"
                VerticalAlignment="Center"/>
                <TextBox TextWrapping="Wrap" 
                Text="{Binding RangeEnd, UpdateSourceTrigger=PropertyChanged}"
                DataObject.Pasting="TextBox_Pasting" 
                Width="120"
                VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
